

<section class="form1"> 
    
    <div class="container-1">
            <h1> Faça a sua denúncia</h1>


        <form method="POST" action="/comentarios">
          <ul class="flex-outer">
            <li>
              <label for="first-name">Titulo</label>
              <input type="text" id="first-name" placeholder="Seu primeiro nome aqui" name="titulo">
            </li>
            <li>
              <label for="last-name">Profissão</label>
              <input type="text" id="last-name" placeholder="Designer" name="profissao">
            </li>
            <li>
              <label for="email">Email</label>
              <input type="email" id="email" placeholder="joao@gmail.com" name="email">
            </li>
            <li>
              <label for="phone">Celular</label>
              <input type="tel" id="phone" placeholder="(11)99999-9999" name="phone">
            </li>
            <li>
              <label for="message">Messagem</label>
              <textarea rows="6" id="message"  placeholder="Mande sua mensagem aqui" name="mensagem"></textarea>
            </li>
            <li>
        
            <li>
              <button type="submit">Cadastrar</button>
            </li>
          </ul>
        </form>

      </div>



</section>